        }
        if ($statepos > 0) {
            $statename = substr($URL, $statepos + 7);
            $DisplayTitle = $DisplayTitle . '(' . $statename . ')';
        }
    
        if ($title == 'title') {
            echo $DisplayTitle;
        } elseif ($title == 'description') {
            echo $DisplayDescription;
        }
    }
